<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="im.pks.sd.controller.MainActivity">

    <Space
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button
            android:id="@+id/button_favorite"
            android:text="@string/favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onFavoritesClicked"/>

    <Button
            android:id="@+id/button_discovery"
            android:text="@string/discovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDiscoveryClicked"/>

    <Button
            android:id="@+id/button_identity"
            android:text="@string/identity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onIdentityClicked"/>

    <Button
            android:id="@+id/button_about"
            android:text="@string/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAboutClicked"/>

    <Space
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
