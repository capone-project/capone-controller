<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/accent</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar.Theme</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/AppTheme.ActionBar.Text</item>
        <item name="background">@color/accent</item>
    </style>

    <style name="AppTheme.ActionBar.Theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar.Text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/accent</item>
        <item name="backgroundSplit">@color/accent</item>
    </style>

    <style name="AppTheme.TabBar" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TabBarText</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TabBarText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="list_item">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/list_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_bottom</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="list_item_primary_text">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/list_item_primary_font_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="list_item_secondary_text">
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/list_item_secondary_font_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/list_activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/list_activity_vertical_margin</item>
    </style>

    <style name="list_item_left_icon">
        <item name="android:contentDescription">@string/service_image</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="list_item_right_icon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="subheader">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
